<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="property"
            type="com.openclassrooms.realestatemanager.domain.model.property.Property" />

        <import type="android.view.View" />

        <import type="com.openclassrooms.realestatemanager.utils.converter.Converter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/address1_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginStart"
            android:layout_marginTop="@dimen/marginTop"
            android:hint="@string/address"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:minLines="2"
            android:scrollbars="vertical"
            android:text="@={property.address.address1}"
            android:textSize="@dimen/textSize"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/address2_text_input"
            android:layout_width="@dimen/formWidth"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginStart"
            android:layout_marginTop="@dimen/marginTop"
            android:hint="@string/address2"
            android:inputType="textPostalAddress"
            android:text="@={property.address.address2}"
            android:textSize="@dimen/textSize"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address1_text_input" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/area_text_input"
            android:layout_width="@dimen/formWidth"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginStart"
            android:layout_marginTop="@dimen/marginTop"
            android:hint="@string/area"
            android:inputType="text"
            android:text="@={property.address.area}"
            android:textSize="@dimen/textSize"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address2_text_input" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/city_text_input"
            android:layout_width="@dimen/formWidth"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginStart"
            android:layout_marginTop="@dimen/marginTop"
            android:hint="@string/city"
            android:inputType="text"
            android:text="@={property.address.city}"
            android:textSize="@dimen/textSize"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/area_text_input" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/state_text_input"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginStart"
            android:layout_marginTop="@dimen/marginTop"
            android:hint="@string/state"
            android:inputType="textPostalAddress"
            android:text="@={property.address.state}"
            android:textSize="@dimen/textSize"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/city_text_input" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/zipcode_text_input"
            android:layout_width="112dp"
            android:layout_height="41dp"
            android:layout_marginStart="@dimen/marginStart"
            android:layout_marginTop="@dimen/marginTop"
            android:hint="@string/zipcode"
            android:inputType="number"
            android:text="@={Converter.intToString(zipcodeTextInput,property.address.zipCode,property.address.zipCode) }"
            android:textSize="@dimen/textSize"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toEndOf="@id/state_text_input"
            app:layout_constraintTop_toBottomOf="@id/city_text_input" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/country_text_input"
            android:layout_width="@dimen/formWidth"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginStart"
            android:layout_marginTop="@dimen/marginTop"
            android:hint="@string/country"
            android:inputType="text"
            android:text="@={property.address.country}"
            android:textSize="@dimen/textSize"
            android:visibility="gone"
            app:endIconMode="clear_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/state_text_input" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>